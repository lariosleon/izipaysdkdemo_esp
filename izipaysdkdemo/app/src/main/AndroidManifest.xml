<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IziPaySdkDemo">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="sensorPortrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.izipay.GET_BEHAVIOR"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.izipay.TRANSACTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <!-- Definici贸n de la actividad del Behavior (la acci贸n de 'GET_BEHAVIOR' puede implementarse sin necesidad de una actividad) -->
        <activity
            android:name=".ExternalAppBehavior"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>

        <!-- Definici贸n de la actividad de Transaction (la acci贸n de 'TRANSACTION' puede implementarse sin necesidad de una actividad) -->
        <activity
            android:name=".ExternalAppTransaction"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>
    </application>
</manifest>